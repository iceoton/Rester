<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Rester</item>

    </style>

    <!-- Theme no Action Bar -->
    <style name="NoActionBar" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Solid.Rester" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_vocab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:titleTextStyle">@style/text_white_bold</item>
    </style>

    <style name="text_white_bold" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_summary_list_item" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogFood" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="DatabaseRowItem" parent="android:TextAppearance.Holo.Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>

</resources>